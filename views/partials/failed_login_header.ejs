    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <form id="login-form" action="/login" method="POST">
                    <fieldset class="d-flex flex-column justify-content-center align-items-center">
                        <legend class="login-element text-center">LOGIN</legend>
                        <div>
                          <label class="login-element" for="username">Username</label>
                          <input type="text" name="username" id="username" />
                        </div>
                        <div class="my-3">
                            <label class="login-element" for="passphrase">Password&nbsp;</label>
                            <input type="password" name="passphrase" id="passphrase" />
                        </div>
                        <button class="pill-button" type="submit">Sign in</button>
                    </fieldset>
                </form>
                <form id="newAccount" action="/create_account" method="GET">
                    <button class="pill-button my-2">Create</button>
                </form>
                <span class="login-element" style="color: red;">Invalid username or password</span>
            </div>
        </div>
      </div>
